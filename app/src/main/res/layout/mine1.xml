<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".BottomNavigationHelper">


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginLeft="@dimen/dp_10"
           android:layout_gravity="center"
            android:text="我 的"
            android:textColor="@color/character1"
            android:textSize="@dimen/dp_25"
            android:textStyle="bold"/>
        <ImageButton
            android:id="@+id/customor_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
           android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_208"
            android:background="@mipmap/customer_service" />

        <ImageButton
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@mipmap/message"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="@dimen/dp_350"
        android:layout_height="@dimen/dp_165"
        android:layout_below="@id/l1"
        android:layout_marginTop="9dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background2">

        <View
            android:layout_width="@dimen/dp_336"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_78"
            android:background="@drawable/background3" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
       android:layout_below="@id/r1"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/green4"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@mipmap/notice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/black"
            android:text="@string/mine_noticedefault"/>

    </LinearLayout>
    <GridLayout
        android:id="@+id/g1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_below="@id/l2"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"
        android:columnCount="2"
        android:rowCount="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="最高可贷额度："
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="总待还:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/maxloan"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_columnWeight="1"
            android:text="@string/mine_maxloandefault"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/character2"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/debt"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_columnWeight="1"
            android:text="0.00"
            android:textSize="30sp"
            android:textColor="@color/character2"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            />

        <Button
            android:id="@+id/imme_repay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="点击立即激活额度 >    "
            android:textSize="10sp"
            android:background="#00000000"
            android:visibility="visible"
            android:textColor="@color/character2"
            android:gravity="end"
            />
        <Button
            android:id="@+id/check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="#00000000"
            android:visibility="visible"
            android:text="点击查看账单 >    "
            android:textSize="10sp"
            android:textColor="@color/character2"
            android:gravity="end"
            />
    </GridLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_below="@id/g1"
        android:orientation="vertical">
        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/search"
            android:text="信用查询"
            android:textSize="16sp"
            android:gravity="start"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:textColorHighlight="@color/character1"
            android:visibility="visible"/>
        <Button
            android:id="@+id/finance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:drawableLeft="@mipmap/finance"
            android:text="理财产品"
            android:textSize="16sp"
            android:gravity="start"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:textColorHighlight="@color/character1"
            android:visibility="visible"/>
    </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_30"
           android:layout_below="@id/l3"
           android:orientation="horizontal">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/safety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:drawableTop="@drawable/safety"
                    android:text="账号与安全"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:visibility="visible"
                    style="@style/TransparentBottomNavBar"/>
                <RadioButton
                    android:id="@+id/suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#00000000"
                    android:drawableTop="@drawable/suggestions"
                    android:text="意见反馈"
                    android:textSize="10sp"
                    style="@style/TransparentBottomNavBar"
                    android:textColor="@color/black"
                    android:visibility="visible"/>
                <RadioButton
                    android:id="@+id/aboutus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#00000000"
                    android:drawableTop="@drawable/aboutus"
                    android:text="关于我们"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    style="@style/TransparentBottomNavBar"
                    android:visibility="visible"/>

            </RadioGroup>


       </LinearLayout>





    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tabbar_mine"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>